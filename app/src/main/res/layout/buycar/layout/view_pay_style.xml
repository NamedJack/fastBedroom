<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcf1f1"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="默认收货地址"
            android:textColor="@color/app_title_gb"
            android:textSize="@dimen/center_text_size" />

        <Button
            android:id="@+id/choose_get_goods_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_change_addr"
            android:gravity="center"
            android:text="修改地址"
            android:textColor="@color/app_title_gb"
            android:textSize="@dimen/center_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_send_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="@dimen/small_text_size" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择你的支付方式"
        android:textColor="@color/app_title_gb"
        android:textSize="@dimen/center_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/paid_by_last_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_last_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:src="@drawable/img_last_money" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_last_money"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="微信支付"
                android:textColor="#1afa29" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paid_by_weixin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:src="@drawable/img_weixin_defaulte" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_weixin"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="微信支付"
                android:textColor="#1afa29" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paid_by_zhifubao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:src="@drawable/img_zhifubao_default" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_zhifubao"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="支付宝支付"
                android:textColor="#19a0e5" />
        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp">

    </View>

</LinearLayout>