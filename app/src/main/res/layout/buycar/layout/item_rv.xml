<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="夏威夷松子,颗粒饱满"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goods_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="夏威夷松子,颗粒饱满" />

            <TextView
                android:visibility="gone"
                android:id="@+id/goods_send_charge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="夏威夷松子,颗粒饱满" />

            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center_vertical">
                <TextView
                    android:textColor="@color/app_title_gb"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/goods_price"
                    android:gravity="center_vertical"
                    android:text="25元/250g"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:visibility="invisible"
                    android:layout_marginRight="5dp"
                    android:id="@+id/img_add_number"
                    android:layout_gravity="center"
                    android:tint="@color/app_title_gb"
                    android:src="@drawable/img_buy_goods_animation"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignTop="@+id/goods_cut_number"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/goods_add_number"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/goods_cut_number"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/goods_number"
                    android:gravity="center"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/goods_add_number" />
                <ImageView
                    android:layout_toLeftOf="@id/goods_number"
                    android:id="@+id/goods_cut_number"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_less"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
</LinearLayout>