<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="@color/light_gray"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/get_order_send_name"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="接单人："
            android:drawableLeft="@drawable/icon_get_order"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/get_order_time"
            android:textSize="@dimen/center_text_size"
            android:gravity="center_vertical|end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/get_order_got_name"
            android:gravity="center_vertical"
            android:text="收货人："
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/get_order_got_phone"
            android:textSize="@dimen/center_text_size"
            android:gravity="center_vertical|end"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/get_order_number"
            android:gravity="center_vertical"
            android:text="订单编号:"
            android:textSize="@dimen/center_text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/get_mail_number"
            android:gravity="center_vertical"
            android:text="订单编号:"
            android:textSize="@dimen/center_text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/get_order_send_addr"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="收货地址:"
        android:textSize="@dimen/center_text_size"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/get_order_pay"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/tab_menu_bg"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/center_text_size" />

        <Button
            android:id="@+id/get_order_cancel"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/get_order_pay"
            android:background="@drawable/tab_menu_bg"
            android:text="取消订单"
            android:textColor="@color/white"
            android:textSize="@dimen/center_text_size" />

        <TextView
            android:id="@+id/get_order_money"
            android:textSize="@dimen/center_text_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/goods_detail_add_car"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="￥"
            android:textColor="@color/app_title_gb" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/light_gray"/>

</LinearLayout>