<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shallow_light_gray"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center|bottom"
            android:text="可提现金额"
            android:textSize="@dimen/center_text_size" />

        <TextView
            android:id="@+id/user_app_account_money"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="￥0.00"
            android:textSize="@dimen/big_text_size" />

        <LinearLayout
            android:id="@+id/choose_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="提现帐户" />

            <TextView
                android:id="@+id/witch_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:gravity="center_vertical|end"
                android:paddingRight="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="￥"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cash_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入提现金额"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="@dimen/center_text_size" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/input_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="输入提现账户昵称"
                android:paddingLeft="25dp"
                android:textSize="@dimen/center_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/account_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="输入提现账户帐号"
                android:paddingLeft="25dp"
                android:textSize="@dimen/center_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/account_app_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="输入当前APP用户密码"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:textSize="@dimen/center_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/take_cash"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/tab_menu_bg"
                android:text="确定提现"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
</layout>