<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_detail_bg"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/money_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/img"
            android:layout_alignEnd="@id/img"
            android:gravity="center"
            android:text="支出" />
        <TextView
            android:id="@+id/money_custom_time"
            android:gravity="center"
            android:text="2017-09-30 09:58:34"
            android:layout_toRightOf="@id/img"
            android:layout_width="220dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/custom_money_number"
            android:gravity="center"
            android:text="+ 128"
            android:layout_toRightOf="@id/money_custom_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

</LinearLayout>