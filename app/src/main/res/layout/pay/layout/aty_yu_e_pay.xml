<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_pay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/img_paid_tips" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="余额支付"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="付款金额"
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:paddingRight="15dp"
                android:id="@+id/yue_pay_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textColor="@color/app_title_gb"
                android:textSize="@dimen/center_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:paddingLeft="15dp"
               android:text="订单编号："/>
           <TextView
               android:id="@+id/paid_order_number"
               android:paddingRight="15dp"
               android:layout_weight="1"
               android:textSize="@dimen/center_text_size"
               android:gravity="center_vertical|end"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
       </LinearLayout>

        <TextView
            android:id="@+id/paid_oder_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:padding="15dp"
            android:text="收货地址：" />

        <Button
            android:id="@+id/yu_e_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@color/app_title_gb"
            android:text="确定支付"
            android:textColor="@color/white"
            android:textSize="@dimen/center_text_size" />
    </LinearLayout>
</layout>