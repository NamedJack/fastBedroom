<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:textSize="@dimen/center_text_size"
        android:gravity="center"
        android:text="选择提现账户"
        android:background="@color/shallow_light_gray"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/img_wx" />

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/img_zfb" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/account_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:background="@drawable/sex_btn_bg"
            android:button="@null"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/radiobutton_textcolor" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="45dp"
            android:layout_weight="1"
            android:background="@drawable/sex_btn_bg"
            android:button="@null"
            android:gravity="center"
            android:text="支付宝"
            android:textColor="@color/radiobutton_textcolor" />
    </RadioGroup>
</LinearLayout>