<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shallow_light_gray"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_about_us_head" />

        <TextView
            android:id="@+id/app_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="版本号 5.0"
            android:textSize="@dimen/center_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:id="@+id/update_us_app"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="检测更新"
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/us_app_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical|end"
                android:paddingRight="10dp"
                android:text="已是最新版本"
                android:textSize="@dimen/center_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/us_about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:clickable="true"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关于快到寝"
            android:textSize="@dimen/center_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="客服电话"
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/us_tel_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical|end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="17711405865"
                android:textSize="@dimen/center_text_size" />
        </LinearLayout>

    </LinearLayout>
</layout>