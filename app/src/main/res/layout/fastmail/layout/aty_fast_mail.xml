<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/shallow_light_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/mail_choose_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_add_user_addr"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="选择收货地址"
            android:textSize="@dimen/center_text_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:id="@+id/mail_user_name"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="收货人"
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/mail_user_tel"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:text="电话:              "
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/mail_area"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:text="区域："
                android:textSize="@dimen/center_text_size" />

            <TextView
                android:id="@+id/mail_address"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:text="地址："
                android:textSize="@dimen/center_text_size" />
        </RelativeLayout>

        <View
            android:background="@color/shallow_light_gray"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/mail_choose_deliver_way"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_deliver_way"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="选择快递"
            android:textSize="@dimen/center_text_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/mail_add_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_add_code"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="添加收货码"
            android:textSize="@dimen/center_text_size" />

        <LinearLayout
            android:id="@+id/mail_code_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/shallow_light_gray"/>
        <EditText
            android:id="@+id/mail_tips"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="快递物品或则到件时间提醒"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textSize="@dimen/center_text_size" />

        <Button
            android:id="@+id/mail_book_order"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@color/app_title_gb"
            android:text="确认下单"
            android:textColor="@color/white"
            android:textSize="@dimen/center_text_size" />
    </LinearLayout>
</layout>