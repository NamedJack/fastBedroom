<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <TextView
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="快递取件码"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_code_of_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
   <TextView
       android:textSize="@dimen/center_text_size"
       android:drawablePadding="8dp"
       android:paddingLeft="15dp"
       android:drawableLeft="@drawable/icon_start"
       android:text="请填上快递取件编码，方便我们取货~"
       android:gravity="center_vertical"
       android:layout_width="match_parent"
       android:layout_height="40dp" />
    <EditText
        android:inputType="number"
        android:id="@+id/input_goods_code"
        android:background="@null"
        android:paddingLeft="15dp"
        android:hint="输入快递取件编码"
        android:textSize="@dimen/center_text_size"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:background="@color/app_title_gb"
        android:id="@+id/post_goods_code"
        android:textColor="@color/white"
        android:text="确认提交"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>