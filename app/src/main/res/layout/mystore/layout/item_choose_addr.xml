<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:paddingLeft="5dp"
            android:layout_width="298dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="默认收货地址"
            android:textColor="@color/app_title_gb"
            android:textSize="@dimen/center_text_size" />

        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/goods_detail_choose_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_change_addr"
            android:gravity="center"
            android:text="修改地址"
            android:textColor="@color/app_title_gb"
            android:textSize="@dimen/center_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/goods_detail_send_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="@dimen/small_text_size" />


    </LinearLayout>
    <Button
        android:id="@+id/goods_detail_to_order"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/goods_detail_buy"
        android:background="@drawable/tab_menu_bg"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/center_text_size" />
</LinearLayout>