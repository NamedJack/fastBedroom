<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recommend_goods_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_have_complete" />

    <TextView
        android:id="@+id/recommend_goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="5dp"
        android:text="【精选美味坚果组合】"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommend_goods_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="5dp"
        android:text="核桃，花生，牛奶， 瓜子 ，营养品"
        android:textSize="16sp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/recommend_goods_promotion_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <TextView
            android:id="@+id/recommend_goods_promotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="5dp"
            android:text="活动：买二送一,首单享8折优惠"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/recommend_goods_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="68元/300g"
            android:textColor="@color/app_title_gb"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            android:background="@color/app_title_gb"
            android:clickable="true"
            android:gravity="center"
            android:text="购买"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>